    <div class="wrapper">
        <div class="sidebar">
            <%- include('partials/toolbar.ejs', {user: user, currentPage: 'events' })%>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <%- include('partials/top_navbar.ejs', {title: 'Events' })%>
                <!-- End Navbar -->
                <div class="content">
                    <!-- The Modal -->
                    <div id="newEventCreateModal" class="modal">
                        <!-- Modal content -->
                        <div class="modal-content">
                            <div class="modal-body">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="title">Create Event</h5>
                                    </div>
                                    <div class="card-body">
                                        <form>
                                            <div class="row">
                                                <div class="col-md-6 pr-md-1">
                                                    <div class="form-group">
                                                        <label>Event Name</label>
                                                        <input type="text" class="form-control" placeholder="Event Name"
                                                            name="event-name" value="">
                                                    </div>
                                                </div>
                                                <div class="col-md-6 pl-md-1">
                                                    <div class="form-group">
                                                        <label>Location</label>
                                                        <input type="text" class="form-control" placeholder="Location"
                                                            name="location" value="">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label>Description</label>
                                                        <textarea class="form-control" placeholder="Description"
                                                            name="description" value=""></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4 pr-md-1">
                                                    <div class="form-group">
                                                        <label>Date</label>
                                                        <input type="date" class="form-control" placeholder=""
                                                            name="date" value="">
                                                    </div>
                                                </div>
                                                <div class="col-md-2 px-md-1">
                                                    <div class="form-group">
                                                        <label>Start Time</label>
                                                        <input type="time" class="form-control" placeholder=""
                                                            name="starttime" value="">
                                                    </div>
                                                </div>
                                                <div class="col-md-2 px-md-1">
                                                    <div class="form-group">
                                                        <label>End Time</label>
                                                        <input type="time" class="form-control" placeholder=""
                                                            name="endtime" value="">
                                                    </div>
                                                </div>
                                                <div class="col-md-4 pl-md-1">
                                                    <div class="form-group">
                                                        <label>Event Type</label>
                                                        <select class="form-control" name="event-type">
                                                            <option value="Internal">Internal</option>
                                                            <option value="External">External</option>
                                                        </select>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="row">
                                                <div class="col-md-12 plr-md-1">
                                                    <div class="form-group">
                                                        <label>Special Permission</label>
                                                        <select class="chosen-select form-control" multiple>
                                                            <option value=""></option>
                                                            <option value="publicpublish">Display to Public</option>
                                                            <option value="notification">Send Notification</option>
                                                            <option value="signups">Add Signups</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                        <div class="row card-footer">
                                            <div class="col-md-4 pl-md-1">
                                                <button class="btn btn-fill btn-primary confirm-edit-btn"
                                                    onclick="createEventButton()">Create</button>
                                            </div>
                                            <div class="col-md-2"></div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="card card-events-list">
                                <div class="card-header ">
                                    <h4 class="title d-inline">Events</h4>
                                </div>
                                <div class="card-body ">
                                    <div class="table-full-width table-responsive">
                                        <table class="table">
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        <div class="events-box">
                                                            <p class="title">Night Market</p>
                                                            <p class="text-muted">2/28/20, 7:00 PM, Online</p>
                                                        </div>
                                                    </td>
                                                    <td class="td-actions text-right">
                                                        <button type="button" rel="tooltip" title=""
                                                            class="btn btn-link" data-original-title="Edit Task">
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="events-box">
                                                            <p class="title">Night Market</p>
                                                            <p class="text-muted">2/28/20, 7:00 PM, Online</p>
                                                        </div>
                                                    </td>
                                                    <td class="td-actions text-right">
                                                        <button type="button" rel="tooltip" title=""
                                                            class="btn btn-link" data-original-title="Edit Task">
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="card">
                                <%- include('partials/calendar.ejs')%>
                            </div>
                        </div>

                    </div>
