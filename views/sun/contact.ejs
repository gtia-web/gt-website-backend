<!DOCTYPE html>
<html lang="en">
  <head>
    <title>GTIA | Contact Us</title>
    <%- include('partials/header.ejs') %>

    <link href="../../assets/sun/css/style.css" rel="stylesheet" />
    <link href="/assets/sun/css/contact.css" rel="stylesheet" />
  </head>

  <body>
    <%- include('partials/navbar.ejs', { currentPage: 'contact' })%>

    <div class="bg-paint-1 py-5 my-5">
      <div class="container">
        <div class="text-center">
          <small>Have any questions?</small>
          <h1>Contact Us</h1>

          <p>
            <a href="mailto:info@gtiambassadors.com">
              info@gtiambassadors.com</a
            >
          </p>
        </div>

        <div class="contact_form">
          <!-- Check if there is a success message -->
          <% if (success) { %>
          <div
            class="alert alert-success alert-dismissible fade show"
            role="alert"
          >
            Successfully sent your message
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="alert"
              aria-label="Close"
            ></button>
          </div>
          <% } %>

          <!-- Check if there is an error message -->
          <% if (error) { %>
          <div
            class="alert alert-danger alert-dismissible fade show"
            role="alert"
          >
            We could not send your message. Please try again later. You can also
            contact us at
            <a
              href="mailto:info@gtiambassadors.com"
              class="link-dark"
            >
              info@gtiambassadors.com</a
            >
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="alert"
              aria-label="Close"
            ></button>
          </div>
          <% } %>
          <form class="contact_form_box" action="/contact" method="POST">
            <div class="row">
              <div class="col-lg-6">
                <div class="form-group text_box">
                  <input
                    type="text"
                    id="name"
                    name="name"
                    placeholder="Your Name"
                    required
                  />
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group text_box">
                  <input
                    type="email"
                    name="email"
                    id="email"
                    placeholder="Your Email"
                    required
                  />
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group text_box">
                  <input
                    type="text"
                    id="subject"
                    name="subject"
                    placeholder="Subject"
                    required
                  />
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group text_box">
                  <textarea
                    name="message"
                    id="message"
                    cols="30"
                    rows="30"
                    placeholder="Enter Your Message . . ."
                    required
                  ></textarea>
                </div>
              </div>
            </div>
            <button type="submit" class="submit_button">Send Message</button>
          </form>
        </div>
      </div>
    </div>

    <%- include('partials/footer.ejs') %> <%-
    include('partials/common-scripts.ejs') %>
  </body>
</html>
