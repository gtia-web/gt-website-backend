                                            </form>
                                            <div class="row card-footer">
                                                <div class="col-md-12">
                                                    <button type="button" onclick=""
                                                        class="btn btn-fill btn-primary confirm-edit-btn back-btn hidden">Back</button>

                                                    <button type="button" onclick=""
                                                        class="btn btn-fill btn-primary confirm-edit-btn btn-float-right next-btn">Create</button>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class='modal-toolbar hidden'>
                                    <div class='button-container'>
                                        <div class="btn-special">
                                            <a href=""><span class="icon fas fa-plus-circle"></span></a>
                                        </div>
                                        <div class="btn-special">
                                            <a href=""><span class="icon fas fa-trash-alt"></span></a>
                                        </div>
                                        <div class="btn-special">
                                            <a href=""><span class="icon fas fa-chevron-up"></span></a>
                                        </div>
                                        <div class="btn-special">
                                            <a href=""><span class="icon fas fa-chevron-down"></span></a>
                                        </div>
                                        <div class="btn-special bottom">
                                            <a href=""><span class="icon far fa-check-circle"></span></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row fixed-size-container">
                        <div class="event-tab-holder">
                            <div class="card card-events-list">
                                <div class="card-header ">
                                    <h4 class="title d-inline">Sheets</h4>
                                </div>
                                <div class="card-body ">
                                    <input type="text" class="form-control sheets-search" id="searsch_user_1"
                                        placeholder="SEARCH" value="" oninput="MakeSearchQuery()">
                                    <div class="table-full-width table-responsive">
                                        <table class="table">
                                            <tbody id="sheets-list">
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class='create-button-container'>
                                    <button type="button" onclick="openCreateNewSheetModal()"
                                        class="btn btn-fill btn-primary btn-fill-width btn-submit">Create Sheet</button>
                                </div>
                            </div>
                        </div>
                        <div class='calendar-size-container'>
                            <iframe class='google-sheets-iframe' id='google-sheets-iframe' src=''></iframe>
                        </div>

                    </div>
                </div>
        </div>
