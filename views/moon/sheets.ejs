                                                            <div class="form-group">
                                                                <label>Sheet Title</label>
                                                                <input type="text" placeholder="Title"
                                                                    name="sheet-title" value="" class="form-control">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <div class="form-group">
                                                                <label>Sheet Source</label><br>
                                                                <input type="radio" name="sheet-source" value="new">
                                                                <label>Create New Sheet</label><br>
                                                                <input type="radio" name="sheet-source" value="url">
                                                                <label>Create From URL</label>
                                                                <input type="text" placeholder="GoogleSheets URL"
                                                                    name="sheetURL" value="" class="form-control">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <div class="form-group">
                                                                <label>Tags </label>
                                                                <input type="text"
                                                                    placeholder="Space separated list of tags"
                                                                    name="tags" value="" class="form-control">
                                                            </div>
                                                        </div>
                                                    </div>
