        <div class="main-panel">
            <!-- Navbar -->
            <%- include('partials/top_navbar.ejs', {title: 'Sheets' })%>
                <!-- End Navbar -->
                <div class="content">
                    <!-- The Modal -->
                    <div id="newSheetCreateModal" class="modal">
                        <!-- Modal content -->
                        <div class="modal-content">
                            <div class="flex-container">
                                <div class="modal-body">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5 class="title">Create Sheet</h5>
                                            <a class='modal-closed-button' onclick="closeModalButton(this)"><i
                                                    class="fas fa-times"></i></a>
