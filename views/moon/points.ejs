<body class="white-content">
    <div class="wrapper">
        <div class="sidebar">
            <%- include('partials/toolbar.ejs', {user: user, currentPage: 'points' })%>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <%- include('partials/top_navbar.ejs', {title: 'Points' })%>
                <!-- End Navbar -->
                <div class="content">

                    <!-- The Modal -->
                    <div id="newPointsModal" class="modal">
                        <!-- Modal content -->
                        <div class="modal-content">
                            <div class="modal-body">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="title">New Points Request</h5>
                                        <a class='modal-closed-button' onclick="closeModalButton(this)"><i
                                                class="fas fa-times"></i></a>
                                    </div>
                                    <div class="card-body">
                                        <form>
                                            <div class="row">
                                                <div class="col-md-12">



                                                    <div class="form-group">
                                                        <label>Description</label>
                                                        <textarea class="form-control" placeholder="Description"
                                                            name="description" value=""></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4 pr-md-1">
                                                    <div class="form-group">
                                                        <label>Points Type</label>
                                                        <select class="form-control" name="pointstype">
                                                            <option value="work">Work</option>
                                                            <option value="social">Social</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        <label>Date</label>
                                                        <input type="date" class="form-control" placeholder="Date"
                                                            name="date" value="">
                                                    </div>
                                                </div>
                                                <div class="col-md-4 pl-md-1">
                                                    <div class="form-group">
                                                        <label>Points</label>
                                                        <input type="text" class="form-control" placeholder="0"
                                                            name="points" value="">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12 prl-md-1">
                                                    <div class="form-group">
                                                        <label>Approver</label>
                                                        <select class="chosen-select form-control" name='approver'>
                                                            <option value=""></option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                        <div class="row card-footer">
                                            <div class="col-md-4 pl-md-1">
                                                <button onclick="createNewPointsRequest()"
                                                    class="btn btn-fill btn-primary accept-profile-btn">Create
                                                    Request</button>
                                            </div>
                                            <div class="col-md-2"></div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="card card-user-management">
                                <div class="card-header ">
                                    <div class="row">
                                        <div class="col-sm-6 text-left">
                                            <h2 class="card-title" id='points-title'>Work Points</h2>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="btn-group btn-group-toggle float-right" data-toggle="buttons">
                                                <label class="btn btn-sm btn-primary btn-simple active"
                                                    onclick="ViewWorkPoints()">
                                                    <input type="radio" name="options" checked>
                                                    <span
                                                        class="d-none d-sm-block d-md-block d-lg-block d-xl-block">Work
                                                        Points</span>
                                                    <span class="d-block d-sm-none">
                                                        <i class="tim-icons icon-single-02"></i>
                                                    </span>
                                                </label>
                                                <label class="btn btn-sm btn-primary btn-simple"
                                                    onclick="ViewSocialPoints()">
                                                    <input type="radio" class="d-none d-sm-none" name="options">
                                                    <span
                                                        class="d-none d-sm-block d-md-block d-lg-block d-xl-block">Social
                                                        Points</span>
                                                    <span class="d-block d-sm-none">
                                                        <i class="tim-icons icon-gift-2"></i>
                                                    </span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body points-table">
                                    <input type="text" class="form-control user-search" id="search_receipt_1"
                                        placeholder="SEARCH" value="" oninput="MakeSearchQuery()">
                                    <div class="table-responsive">
                                        <div class="table-full-width  table-responsive">
                                            <table class="table" id='workPointsTableHead'>
                                                <thead class=" text-primary">
                                                    <tr>
                                                        <th>
                                                            Date
                                                        </th>
                                                        <th>
                                                            Type
                                                        </th>
                                                        <th>
                                                            Description
                                                        </th>
                                                        <th>
                                                            Points
                                                        </th>
                                                        <th>
                                                            Status
                                                        </th>
                                                        <th class="text-right">
                                                            Action
                                                        </th>
                                                    </tr>
                                                </thead>
                                            </table>
                                        </div>
                                        <div class="table-full-width  table-responsive">
                                            <table class="table" id='workPointsTableBody'>
                                                <tbody id='points-list-body-1'>

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="row card-footer">
                                    <div class="col-md-4 pl-md-1">
                                        <button class="btn btn-fill btn-primary confirm-edit-btn"
                                            onclick="newPointRequest()"><i class="fas fa-plus"
                                                style="padding-right: 5px;"></i> New </button>
                                    </div>
                                    <div class="col-md-2"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
